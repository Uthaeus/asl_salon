<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="product-index">
  <div class="col-md-4">
    <div>
      <% @products.each do |product| %>
        <div class="row">
          <p><%= product.title %></p>
          <br>
          <p><%= product.brand %></p>
          <br>
          <p><%= product.price %></p>
          <br>
          <p><%= product.image %></p>
          <br>
          <p><%= link_to 'Show', product, class: "btn btn-primary" %></p>
          <p><%= link_to 'Edit  ', edit_product_path(product), class: "btn btn-primary" %></p>
          <p><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
