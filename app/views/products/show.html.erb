<div class="container product-container">
  <div class='row'>
    <div class="col-md-7">
      <%= image_tag @product.image, width: '100%' %>

    </div>
    <div class="col-md-5">
      <h1><%= @product.title %></h1>


      <p>
        <%= @product.brand %>
      </p>

      <p>
        <%= "$%.2f" % @product.price %>
      </p>



      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %> |
      <%= link_to 'Back', products_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
