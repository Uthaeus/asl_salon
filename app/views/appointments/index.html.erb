<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Appointments</h1>
  <div class="row">
    <div class="col-sm-8">
      <%= month_calendar do |date| %>
        <%= date %>
      <% end %>
    </div>

    <div class="col-sm-4">
      <div class="card app-list"> 
        <% @appointments.each do |appointment| %>
          
          <p><%= appointment.name %></p>
          <p><%= appointment.start_time %></p>
          <p><%= link_to 'Show', appointment %></p>
          <p><%= link_to 'Edit', edit_appointment_path(appointment) %></p>
          <p><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          
        <% end %>
      </div> 
    </div>
  </div>
</div>
<%= link_to 'New Appointment', new_appointment_path %>
